$accentColor = #007acc
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

$textLightColor = #777777

body {
    --accent-color : $accentColor;
    --text-color : $textColor;
    --border-color : $borderColor;
    --codeBg-color : $codeBgColor;

    --text-light-color : $textLightColor;
}