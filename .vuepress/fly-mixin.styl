.landing-page-background video
    makeMeFly(10s, 3s)

.landing-page-background > img.logo
    makeMeFly(12s, 0s, -20px)

.landing-page-background .random-svgs-container
    makeMeFly(6s, 0s, -20px, 20px)


@media only screen and (max-width:600px) 
    .landing-page-background video
        makeMeFly(10s, 3s, -35px, 35px)

    .landing-page-background > img.logo
        makeMeFly(5s, 0s, -20px, 20px)


makeMeRotate(duration=5s, delay=0s, deg1=0deg, deg2=359deg)
    animation: duration linear 0s infinite normal none running myRotation;

    @keyframes myRotation 
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(359deg);
        }

